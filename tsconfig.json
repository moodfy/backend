{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "dom", 
         "esnext"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames":true
      // "noUnusedLocals": true,          
      // "noUnusedParameters": true
   }
}